<h2>Portfolio Items</h2>

<%= link_to 'create a new portfolio item', new_portfolio_path %>

<% @portfolio_items.each do |item| %>
    <p> <%= item.title %> <p>
    <p> <%= item.subtitle%> <p>
    <p> <%= item.body %> <p>
    <%= image_tag item.thumb_image %>
    <%= link_to 'Edit Item', edit_portfolio_path(item) %>
<% end %>