<div class="col">
  <div class="card card-itemp shadow-sm" data-id=<%= portfolio_item.id %> >
    <%= image_tag portfolio_img(portfolio_item.thumb_image.url, 'thumb') , class: 'bd-placeholder-img card-img-top' %>
    <div class="card-body">
      <p class="card-text">
        <span><%= link_to portfolio_item.title, portfolio_path(portfolio_item) %></span>
        <%= portfolio_item.subtitle%>
      </p>
    </div>
  </div>
</div>
