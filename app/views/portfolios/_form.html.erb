<%= form_with model: @portfolio_items do |f| %>
  <div class="container">
    <div class="row">
      <div class="col-6">
        <div class="form-group">
          <%= f.label "title", class: 'form-label' %>
          <%= f.text_field :title, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label "subtitle", class: 'form-label' %>
          <%= f.text_field :subtitle, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label "body", class: 'form-label' %>
          <%= f.text_area :body, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label "main_image", class: 'form-label' %>
          <%= f.url_field :main_image, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label "thumb_image", class: 'form-label' %>
          <%= f.url_field :thumb_image, class: 'form-control' %>
        </div>
      </div>
      <div class="col-6">
        <div >
          <%= f.label :technologies, class: 'form-label' %>
          <%= f.fields_for :technologies do |tech| %>
            <div class="form-group">
              <%= tech.label :name, class: 'form-label' %>
              <%= tech.text_field :name, class: 'form-control' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    <hr class='w-50'>
    <div class="form-group d-grid w-50">
      <%= f.submit class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
