<%= form_with model: @portfolio_items do |f| %>
  <%= render 'shared/error_messages', resource: @portfolio_items %>
  <div class="container">
    <div class="row">
      <div class="col-6">
        <div class="form-group">
          <%= f.label "title", class: 'form-label' %>
          <%= f.text_field :title, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label "subtitle", class: 'form-label' %>
          <%= f.text_field :subtitle, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label "main_image", class: 'form-label' %>
          <%= f.file_field :main_image, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label "thumb_image", class: 'form-label' %>
          <%= f.file_field :thumb_image, class: 'form-control' %>
        </div>
      </div>
      <div class="col-6">
        <div class="form-group">
          <%= f.label "body", class: 'form-label' %>
          <%= f.text_area :body, class: 'form-control', rows: 10 %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class='col-md-6'>
        <br>
        <hr>
        <%= f.label :technologies, class: 'form-label' %>
        <%= f.fields_for :technologies do |tech| %>
          <%= render 'technology_fields', f: tech %>
        <% end %>
        <div class='mt-3'>
          <%= link_to_add_association 'Add Technology', f, :technologies %>
        </div>
      </div>
    </div>
    <hr class='w-50'>
    <div class="form-group d-grid w-50">
      <%= f.submit class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
