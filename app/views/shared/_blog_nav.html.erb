<div class="mx-5">
  <header class="blog-header pt-2">
    <div class="row flex-nowrap justify-content-between align-items-center">
      <div class="col-4 pt-1 social-links">
        <%= social_links('dark') %>
      </div>
      <div class="col-4 text-center">
        <%= link_to root_path do %>
          <span class="text-secondary blog-logo">
            <strong><i class="fas fa-blog" style="color:#D9583B;"  ></i></strong>
          </span>
        <% end %>
      </div>
      <div class="col-4 d-flex justify-content-end align-items-center">
        <%= login_helper('btn btn-sm btn-outline-secondary mx-2') %>
      </div>
    </div>
  </header>
</div>
<hr class='my-1 py-0'>
<div class="mx-5">
  <div class="nav-scroller py-1">
    <nav class="nav d-flex justify-content-between">
      <%= nav_helper('link-secondary') %>
    </nav>
  </div>
</div>
